{
  "manifest_version": 3,
  "name": "3주일 달력",
  "version": "1.0",
  "description": "오늘을 포함한 3주일 달력과 메모 기능을 제공합니다.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
